<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"> 
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0/jquery.mobile-1.0.min.css" />
	<script type="text/javascript" src="http://code.jquery.com/jquery-1.6.4.min.js"></script>
	<script type="text/javascript" src="http://code.jquery.com/mobile/1.0/jquery.mobile-1.0.min.js"></script>
    
    <script type="text/javascript">
        //reset type=date inputs to text
        $(document).bind("mobileinit", function () {
            $.mobile.page.prototype.options.degradeInputs.date = true;
        });	
    </script>

    <link rel="stylesheet" href="http://code.jquery.ui.datepicker.mobile.css" /> 
    <script type="text/javascript" src="http://code.jQuery.ui.datepicker.js"></script>
    <script type="text/javascript" src="http://code.jquery.ui.datepicker.mobile.js"></script>
</head>
<body>
    <div data-role="page">

	    <div data-role="header">
		    <h1>@ViewBag.Title</h1>
	    </div><!-- /header -->  

	    <div data-role="content">	
		    <div>
                @TempData["flash"]
            </div>
            <div>
                @Html.ValidationSummary()
            </div>
            <div>
                @RenderBody()
            </div>
	    </div><!-- /content -->

    </div><!-- /page -->
</body>
</html>
